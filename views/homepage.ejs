<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head %>
    <% if (username == false ) { %>
        <script src="javascripts/login.js"></script>
    <% } %>
    <script src="javascripts/home.js"></script>
</head>

<body>
    <% if (username != false ) { %>
        <div class="header">
            <% include ./partials/home %>
        </div>
    <% } %>
    <div class="content" id="home">
        <% if (username == false ) { %>
            <% include ./partials/login %>
        <% } else { %>
            <div class="ui secondary pointing menu">
            <a class="active item" href="/mylists">
              My Profiles
            </a>
            <div class="right menu">
            <div class="ui item">Welcome, <%= username %>!</div>
              <a class="ui item" href="/logout"><i class="sign out icon"></i>
                Logout
              </a>
            </div>
          </div>
          <div class="content" id="app">
            <center>
                <div id="lists">
                </div>
            </center>
        </div>
        <% } %>
    </div>
    <div class="footer">
        <% include ./partials/footer %>
    </div>

</body>

</html>
